<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.monroe.team.chekit.ui.controller.RunSuiteScreenController">
   <center>
      <TreeView fx:id="suiteRunTreeView" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" top="5.0" />
         </BorderPane.margin></TreeView>
   </center>
   <top>
      <GridPane hgap="2.0" style="-fx-background-color: #3cc3d0;" vgap="2.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="NEVER" maxWidth="145.0" minWidth="10.0" prefWidth="88.0" />
          <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="215.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0" vgrow="NEVER" />
          <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="suiteNameLabel" style="-fx-text-fill: #144e50; -fx-font-size: 12px; -fx-font-weight: bold;" text="&lt;Suite Name goes here&gt;" GridPane.columnSpan="2" GridPane.halignment="LEFT" />
            <Label style="-fx-text-fill: #144e50; -fx-font-size: 10px;" text="Run start date" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <Label fx:id="suiteDateLabel" layoutX="46.0" layoutY="55.0" style="-fx-text-fill: #144e50; -fx-font-size: 10px; -fx-font-weight: bold;" text="&lt;Date Goes Here&gt;" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <Label fx:id="suiteDetailsLabel" layoutX="113.0" layoutY="55.0" style="-fx-text-fill: #144e50; -fx-font-size: 10px; -fx-font-weight: bold;" text="&lt;Details Goes Here which might be veeeeeeeeeeeeery long&gt;" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP" />
            <Label layoutX="56.0" layoutY="53.0" style="-fx-text-fill: #144e50; -fx-font-size: 10px;" text="Run details" GridPane.halignment="LEFT" GridPane.rowIndex="2" GridPane.valignment="TOP" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
   </top>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="runDetailsPane" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="100.0"
                  style="-fx-background-color: #FEFEFE; -fx-background-radius: 2px; -fx-effect: dropshadow(three-pass-box, #737373, 5,0,2,2);" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                   <Label style="-fx-font-size: 10px; -fx-text-fill: #999999;" text="*Hint: Use 'Shift+Enter' - to update comment, 'Esc' - to hide details" VBox.vgrow="NEVER">
                       <VBox.margin>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                       </VBox.margin>
                   </Label>
                  <Label fx:id="runDetailsLabel" style="-fx-font-size: 12px; -fx-text-fill: #333333;" text="&lt;Details go here&gt;" wrapText="true" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="0.0" />
               </padding>
            </VBox>
            <Label style="-fx-font-size: 10px; -fx-text-fill: #999999;" text="*Hint: start typing for command prompt appears. Use 'Shift+Enter' - to show check details " VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>
