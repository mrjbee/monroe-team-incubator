<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="org.monroe.team.smooker.app.android.WizardActivity">

        <RelativeLayout
            android:id="@+id/wizzard_separator_layout"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background.main.highlight"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/wizzard_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />


            <TextView
                    android:id="@+id/wizzard_setting_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:layout_marginLeft="5pt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_caption"
                    android:layout_below="@+id/wizzard_caption_label"
                    android:layout_toRightOf="@+id/logo_image"
                    android:textStyle="bold"
                />

        </RelativeLayout>


    <LinearLayout
        android:id="@+id/wizzard_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/wizzard_separator_layout"
        android:animateLayoutChanges="true"
        />

    <ImageButton
        android:id="@+id/wizzard_next_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="Next"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/next_button"
        android:onClick="performNext"
        />

    <ImageButton
        android:id="@+id/wizard_back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Back"
        android:layout_toLeftOf="@+id/wizzard_next_btn"
        android:layout_marginRight="10dp"
        android:background="@drawable/back_buttton"
        android:onClick="performBack"
        />

</RelativeLayout>
