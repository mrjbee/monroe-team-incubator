<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/start_setting_btn"
        android:background="@drawable/setting_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <org.monroe.team.smooker.promo.android.view.LeftToRightTextView
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:id="@+id/today_value_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="@dimen/text_size_caption_small"
        android:textColor="@color/font.white"
        android:shadowColor="@color/font.dark.shadow"
        android:shadowRadius="1"
        android:shadowDx="0"
        android:shadowDy="1"/>

    <TextView
        android:layout_toRightOf="@+id/today_value_description_text"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:id="@+id/today_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/text_size_caption_small"
        android:textColor="@color/font.white"/>
</RelativeLayout>