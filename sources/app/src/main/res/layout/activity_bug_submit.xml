<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.monroe.team.smooker.promo.android.BugSubmitActivity">

    <LinearLayout
        android:id="@+id/background_shadow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#000000"
        android:alpha="0.5"/>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/panel_round_white"
        android:layout_margin="10dp"
        android:padding="20dp"
        >

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Setup.Section.Caption"
            android:text="@string/application.name"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/app"
            android:id="@+id/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Setup.Sub.Caption"
            android:text="@string/bug.report.message"/>
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/bug_image"
            android:layout_below="@+id/caption"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bug"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/action_description"
            android:layout_below="@+id/bug_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Setup.Sub.Caption"
            android:text="@string/bug.report.suggestion"/>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/skip_button"
            android:layout_below="@+id/action_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button.Setup"
            android:text="@string/bug.report.skip.this.time"
            />
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/submit_button"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button.Setup"
            android:textStyle="bold"
            android:text="@string/bug.report.submit.bug"
            />
        <Button
            android:id="@+id/skip_always_button"
            android:layout_below="@id/skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button.Setup"
            android:text="@string/bug.report.skip.and.remember"
            />
    </RelativeLayout>
</RelativeLayout>