<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context="org.monroe.team.smooker.app.android.SmokeBreakActivity"
    android:background="@color/background.main.light">
    <RelativeLayout
        android:id="@+id/sb_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:background="@drawable/background_main_no_ornament">

        <ImageButton
            android:id="@+id/sb_back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:padding="12dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/cancel_logo"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/sb_event_text"
            android:layout_below="@+id/sb_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Choice.Header.Sub.Caption"
            android:text="@string/smoke.break.sub.caption"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/sb_question_text"
            android:layout_below="@+id/sb_event_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Choice.Header.Caption"
            android:text="@string/smoke.break.caption"/>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/sb_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
       android:padding="20dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:gravity="center">

    <RelativeLayout
           android:id="@+id/sb_option_skip_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="15dp"
           android:paddingTop="10dp"
           android:layout_marginTop="20dp"
           android:paddingBottom="10dp">

           <ImageView
               android:id="@+id/sb_option_skip_icon"
               android:layout_width="27dp"
               android:layout_height="27dp"
               android:padding="5dp"
               android:layout_marginRight="20dp"
               android:src="@drawable/cancel_logo_dark"/>

           <TextView
               android:layout_toRightOf="@+id/sb_option_skip_icon"
               android:id="@+id/sb_option_skip_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/smoke.break.skip.smoke"
               style="@style/Text.Choice.Caption"
               />

           <TextView
               android:id="@+id/sb_option_skip_description"
               android:layout_below="@+id/sb_option_skip_title"
               android:layout_alignLeft="@id/sb_option_skip_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/Text.Choice.Description"
               android:text="@string/smoke.break.skip.about"
               />
       </RelativeLayout>

       <RelativeLayout
           android:id="@+id/sb_option_postpone_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="15dp"
           android:paddingTop="10dp"
           android:paddingBottom="10dp">

           <ImageView
               android:id="@+id/sb_option_postpone_icon"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginRight="20dp"
               android:src="@drawable/clock_logo"/>

           <TextView
               android:layout_toRightOf="@+id/sb_option_postpone_icon"
               android:id="@+id/sb_option_postpone_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/smoke.break.pospone"
               style="@style/Text.Choice.Caption"
               />
           <TextView
               android:id="@+id/sb_option_postpone_description"
               android:layout_below="@+id/sb_option_postpone_title"
               android:layout_alignLeft="@+id/sb_option_postpone_title"
               style="@style/Text.Choice.Description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/smoke.break.postponed.about"
               />
       </RelativeLayout>

       <RelativeLayout
           android:id="@+id/sb_option_smoke_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="15dp"
           android:paddingTop="10dp"
           android:paddingBottom="10dp">

           <ImageView
               android:id="@+id/sb_option_smoke_icon"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginRight="20dp"
               android:src="@drawable/smoke_logo"/>

           <TextView
               android:layout_toRightOf="@+id/sb_option_smoke_icon"
               android:id="@+id/sb_option_smoke_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/smoke.break.smoke.option"
               style="@style/Text.Choice.Caption"
               />
           <TextView
               android:id="@+id/sb_option_smoke_description"
               android:layout_below="@+id/sb_option_smoke_title"
               android:layout_alignLeft="@+id/sb_option_smoke_title"
               style="@style/Text.Choice.Description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/smoke.break.smoke.option.about"
               />
       </RelativeLayout>
   </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_below="@+id/sb_title_layout"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:alpha="0.5"
        android:background="@drawable/shadow_vertical"/>


</RelativeLayout>
