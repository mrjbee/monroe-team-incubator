<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <TextView
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are saving on"
        android:textSize="@dimen/text_size_normal_smalles"
        android:textColor="@color/font.dark.lighter"
        android:id="@+id/quit_caption"
        />

    <RelativeLayout
        android:id="@+id/quit_data_panel"
        android:layout_below="@+id/quit_day_caption_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <include
            layout="@layout/panel_info_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
</RelativeLayout>