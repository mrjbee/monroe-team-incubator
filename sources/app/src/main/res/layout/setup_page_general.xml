<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gs_price_text"
        android:paddingTop="20dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One smoke cost"
        android:textSize="@dimen/text_size_caption_small"
        />

    <EditText
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/gs_price_edit"
        android:layout_alignBottom="@+id/gs_price_text"
        android:layout_toRightOf="@+id/gs_price_text" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gs_cur_spinner"
        android:layout_toRightOf="@+id/gs_price_edit"
        android:layout_alignBottom="@+id/gs_price_edit"/>

    <LinearLayout
        android:id="@+id/spd_separator_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="1px"
        android:layout_margin="20dip"
        android:layout_below="@id/gs_cur_spinner"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>