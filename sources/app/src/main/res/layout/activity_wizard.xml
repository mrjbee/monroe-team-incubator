<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="2"
    android:orientation="vertical"
    tools:context="org.monroe.team.smooker.app.WizardActivity">

    <RelativeLayout
            android:id="@+id/description_layout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/wizzard_description_layout">
                <TextView
                    android:id="@+id/wizzard_caption_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a_wizard_about"
                    android:layout_marginTop="10pt"
                    android:layout_marginLeft="5pt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_caption_small"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/wizzard_description_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Here going to be description of what and how this step could be passed"
                    android:layout_marginTop="5pt"
                    android:layout_marginLeft="10pt"
                    android:layout_marginRight="10pt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_below="@id/wizzard_caption_label"
                    />
                <LinearLayout
                    android:id="@+id/wizzard_separator_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/action_bar_height"
                    android:background="@color/background.main.highlight"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/wizzard_setting_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:layout_marginLeft="5pt"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_caption"
                            android:layout_alignBottom="@+id/logo_image"
                            android:layout_toRightOf="@+id/logo_image"
                            android:textStyle="bold"
                        />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/wizzard_next_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="Next"
                    android:layout_alignBottom="@+id/wizzard_separator_layout"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/next_button"
                    android:onClick="performNext"
                    />

                <ImageButton
                    android:id="@+id/wizard_back_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="Back"
                    android:layout_alignBottom="@+id/wizzard_separator_layout"
                    android:layout_toLeftOf="@+id/wizzard_next_btn"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/back_buttton"
                    android:onClick="performBack"
                    />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/wizzard_content_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        >

    </LinearLayout>

</LinearLayout>
