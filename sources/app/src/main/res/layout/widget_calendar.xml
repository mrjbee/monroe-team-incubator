<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/widget_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_dark_bkg">


    <RelativeLayout
        android:id="@+id/wc_left_content_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/wc_left_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="20"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_widget"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="-1"
            android:shadowRadius="1"/>

        <TextView
            android:id="@+id/wc_left_data_det_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/wc_left_data_text"
            android:paddingTop="5dp"
            android:text="min"
            android:textSize="@dimen/text_size_widget_details"
            android:textStyle="bold"
            android:textColor="@color/background.main"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/wc_separ"
        android:layout_width="3px"
        android:layout_height="50dp"
        android:background="@drawable/widget_separ"
        android:layout_marginRight="0dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/wc_left_content_panel"/>

    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/wc_right_data_det_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/wc_separ"
        android:text="since 30 Fri 2014 22:30"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_widget_details"
        />

    <TextView
        android:id="@+id/wc_right_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/wc_right_data_det_text"
        android:layout_centerVertical="true"
        android:text="Without smoking"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_widget_small"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="-1"
        android:shadowRadius="1"/>
    </RelativeLayout>

</RelativeLayout>