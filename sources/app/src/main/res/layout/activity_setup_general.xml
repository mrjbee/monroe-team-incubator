<org.monroe.team.smooker.promo.android.view.CircleAppearanceRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setup_base_container">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background.main.light.dark">

        <RelativeLayout
            android:id="@+id/setup_header"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="7dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/setup_caption_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup.settings"
                style="@style/Text.Setup.Sub.Caption"
                android:layout_above="@+id/setup_description_text"
                android:layout_alignLeft="@+id/setup_description_text"
                android:layout_alignStart="@+id/setup_description_text" />

            <TextView
                android:id="@+id/setup_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example"
                style="@style/Text.Setup.Caption"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/setup_quit_btn"
                android:layout_toEndOf="@+id/setup_quit_btn" />

            <Button
                android:id="@+id/setup_apply_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup.apply.changes"
                style="@style/Button.Setup"
                android:layout_alignBottom="@+id/setup_quit_btn"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_marginEnd="35dp" />

            <ImageButton
                android:id="@+id/setup_quit_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="12dp"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:src="@drawable/cancel_logo_dark"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/setup_revert_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="12dp"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:src="@drawable/revert_logo_dark"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/setup_quit_btn"
                android:layout_toEndOf="@+id/setup_quit_btn" />

        </RelativeLayout>

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/setup_header"
            android:id="@+id/setup_top_shadow"
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:src="@drawable/shadow_down"
            android:scaleType="fitXY"/>


        <LinearLayout
            android:layout_below="@id/setup_header"
            android:id="@+id/setup_content_panel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"/>
    </RelativeLayout>
</org.monroe.team.smooker.promo.android.view.CircleAppearanceRelativeLayout>
