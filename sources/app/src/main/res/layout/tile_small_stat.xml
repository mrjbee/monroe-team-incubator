<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="20dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total/Average"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/font.dark.light"
            android:id="@+id/stat_total_smokes"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/stat_image"/>

        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120 / 5 smokes"
            android:textSize="@dimen/text_size_normal_smalles"
            android:textColor="@color/font.dark.lighter"
            android:id="@+id/stat_total_smokes_value"
            android:layout_below="@+id/stat_total_smokes"
            android:layout_alignLeft="@+id/stat_total_smokes" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/stat_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/tile_icon_stat"/>

</RelativeLayout>