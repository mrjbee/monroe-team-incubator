<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.monroe.team.smooker.app.StartActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_background">
        <TextView
            android:id="@+id/start_caption_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_caption_biggest"
            android:textColor="@color/font.white"
            android:shadowColor="@color/font.dark.shadow"
            android:shadowRadius="1"
            android:shadowDy="1"
            />

        <ImageButton
            android:id="@+id/start_setting_btn"
            android:background="@drawable/setting_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/start_caption_text"
            android:layout_alignParentRight="true"
            />


        <TextView
            android:id="@+id/start_about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 smokes today"
            android:textSize="@dimen/text_size_caption_small"
            android:layout_below="@+id/start_caption_text"
            android:layout_alignLeft="@+id/start_caption_text"
            android:textColor="@color/font.white"
            android:shadowColor="@color/font.dark.shadow"
            android:shadowRadius="1"
            android:shadowDy="1"
            />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/start_about_text"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/clock_background">

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
