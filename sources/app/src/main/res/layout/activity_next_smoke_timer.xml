<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background.main.light.dark"
    tools:context="org.monroe.team.smooker.app.NextSmokeTimerActivity">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ns_timer_close_btn"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="6dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/cancel_logo_dark"
            android:visibility="visible"
            />

         <TextView
            android:paddingTop="2dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/font.dark.light"
            android:textSize="@dimen/text_size_normal"
            />
    </LinearLayout>


    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/ns_timer_panel"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/ns_timer_clock_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/next_smoke_timer_bkg"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/next_smoke_timer_value"/>

        <Space
            android:id="@+id/ns_timer_anchor"
            android:layout_centerInParent="true"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/ns_timer_decor_smoke"
            android:layout_below="@+id/ns_timer_anchor"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/next_smoke_timer_big_smoke"/>

        <TextView
            android:id="@+id/ns_timer_value"
            android:layout_above="@+id/ns_timer_anchor"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:00"
            android:textStyle="bold"
            android:textColor="@color/font.dark.lighter2"
            android:textSize="@dimen/text_size_caption_biggest"
            android:shadowColor="@color/font.white.shadow"
            android:shadowDy="2"
            android:shadowDx="0"
            android:shadowRadius="3"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/ns_timer"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/ns_timer_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEFORE NEXT SMOKE"
        android:textStyle="bold"
        android:textColor="@color/font.dark.lighter2"
        android:textSize="@dimen/text_size_caption_small"
        android:shadowColor="@color/font.white.shadow"
        android:shadowDy="2"
        android:shadowDx="0"
        android:shadowRadius="3"
        />

</RelativeLayout>
