        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/d_content_layout"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_below="@+id/d_logo_layout">
            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                class="org.monroe.team.smooker.app.SmokeChartView"
                android:id="@+id/view" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/add_smoke_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/d_content_layout"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-35dp"
            android:background="@drawable/add_cigareta_btn"
        />

</RelativeLayout>
