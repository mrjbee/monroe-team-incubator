<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <TextView
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quit_schedule"
        style="@style/Text.Tile.Big.Caption"
        android:id="@+id/quit_caption"
        />

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/quit_caption"
        android:id="@+id/quit_day_caption_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/quit_data_panel"
        android:layout_below="@+id/quit_day_caption_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <GridView
            android:id="@+id/quit_grid"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:numColumns="7">
        </GridView>

        <include
            layout="@layout/panel_info_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <ImageView
        android:layout_below="@+id/quit_day_caption_panel"
        android:id="@+id/quit_top_shadow"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:src="@drawable/shadow_down"
        android:scaleType="fitXY"
        android:visibility="invisible"/>

    <ImageView
        android:layout_alignParentBottom="true"
        android:id="@+id/quit_bottom_shadow"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:src="@drawable/shadow_up"
        android:scaleType="fitXY"
        android:visibility="visible"/>
</RelativeLayout>