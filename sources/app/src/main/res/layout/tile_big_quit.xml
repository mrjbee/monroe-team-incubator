<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <TextView
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smoke quit schedule"
        android:textSize="@dimen/text_size_normal_smalles"
        android:textColor="@color/font.dark.lighter"
        android:id="@+id/quit_caption"
        />

    <LinearLayout
        android:layout_below="@+id/quit_caption"
        android:id="@+id/quit_day_caption_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>


</RelativeLayout>