<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background.main.light"
    android:id="@+id/star_root"
    tools:context="org.monroe.team.smooker.app.StartActivity">
    <org.monroe.team.smooker.app.android.view.RelativeLayoutExt
        android:id="@+id/start_bottom_layer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_main_no_ornament">
        <LinearLayout
            android:id="@+id/start_ornament_panel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/background_main"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Space
                android:layout_width="fill_parent"
                android:layout_height="60dp" />

            <RelativeLayout
                android:id="@+id/start_time_panel"
                android:layout_weight="2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/start_clock_background_panel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/clock_background"
                    android:visibility="visible"/>
                <org.monroe.team.smooker.app.android.view.RoundSegmentImageView
                    android:id="@+id/start_clock_value_panel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/clock_value"
                    android:visibility="visible"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/relativeLayout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/past_after_last_smoke"
                        android:textSize="@dimen/text_size_caption"
                        android:textColor="@color/font.dark"
                        android:id="@+id/clock_after_text"
                        android:layout_centerHorizontal="true"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/clock_after_text"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 days"
                            android:textSize="@dimen/text_size_caption_small"
                            android:textColor="@color/font.dark"
                            android:textStyle="bold"
                            android:id="@+id/clock_day_value"
                            android:layout_below="@+id/clock_after_text"
                            />

                        <org.monroe.team.smooker.app.android.view.TextViewExt
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00:00"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_caption_small"
                            android:textColor="@color/font.dark"
                            android:id="@+id/clock_time_value"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/clock_after_text"
                            android:layout_alignBaseline="@id/clock_day_value"
                            android:layout_toRightOf="@id/clock_day_value"/>
                    </LinearLayout>
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_height="28dp"
                android:layout_width="63dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/start_open_picker_panel"
                android:background="@drawable/open_picker_background"
                android:layout_gravity="left"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/start_open_picker_arrow_image"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/open_picker_up_arrow"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/start_bottom_panel"
                android:layout_below="@+id/start_open_picker_panel"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="@color/background.main.light">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:text="Statistics"
                    android:id="@+id/start_tile_caption_text"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_caption_small"
                    android:textColor="@color/font.dark.light"
                    android:shadowColor="@color/font.white.shadow"
                    android:shadowRadius="1"
                    android:shadowDy="1"
                    />



                <ImageButton
                    android:id="@+id/start_setting_dublicate_btn"
                    android:background="@drawable/setting_dark_btn_push"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignBottom="@+id/start_tile_caption_text"
                    android:layout_alignParentRight="true"
                    />
          </RelativeLayout>

        </LinearLayout>
    </org.monroe.team.smooker.app.android.view.RelativeLayoutExt>

    <LinearLayout
        android:id="@+id/start_tile_layer_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_weight="0"
            android:orientation="vertical"
            android:id="@+id/start_tile_space_wrap_panel"
            android:layout_width="fill_parent"
            android:layout_height="100dp">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/start_tile_content_wrapper"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:id="@+id/start_tile_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/panel_round_whitest_2">
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/start_tile_big_content_wrapper"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:gravity="bottom"
                    android:visibility="gone">
                        <LinearLayout
                            android:id="@+id/start_tile_big_content"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:visibility="invisible"
                            android:orientation="horizontal">
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/start_tile_small_content"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <!-- Small Tile adds here -->
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_height="17dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/start_tile_hole_place"
                android:layout_below="@+id/start_tile_content"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:orientation="horizontal"
                android:gravity="center"
                />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/start_header_panel"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/start_caption_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_front_page"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_caption"
            android:textColor="@color/font.white"
            android:shadowColor="@color/font.dark.shadow"
            android:shadowRadius="1"
            android:shadowDy="1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/start_setting_btn"
            android:background="@drawable/setting_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:id="@+id/today_value_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_normal_smalles"
            android:textColor="@color/font.white"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/start_setting_btn"
            android:layout_toStartOf="@+id/start_setting_btn" />

        <TextView
            android:layout_marginRight="2dp"
            android:id="@+id/today_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="@dimen/text_size_normal_smalles"
            android:textColor="@color/font.white"
            android:background="@drawable/background_smoke_count"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/today_value_description_text"
            android:layout_toStartOf="@+id/today_value_description_text" />

    </RelativeLayout>

    <Button
        android:id="@+id/add_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="165dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/add_smoke_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
