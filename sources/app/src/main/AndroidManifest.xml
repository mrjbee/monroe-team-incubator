<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.monroe.team.smooker.app" >

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <compatible-screens>

        <!-- all small size screens -->
        <screen
            android:screenDensity="ldpi"
            android:screenSize="small" />
        <screen
            android:screenDensity="mdpi"
            android:screenSize="small" />
        <screen
            android:screenDensity="hdpi"
            android:screenSize="small" />
        <screen
            android:screenDensity="xhdpi"
            android:screenSize="small" />
        <screen
            android:screenDensity="480"
            android:screenSize="small" />
        <screen
            android:screenDensity="640"
            android:screenSize="small" />
        <!-- all normal size screens -->
        <screen
            android:screenDensity="ldpi"
            android:screenSize="normal" />
        <screen
            android:screenDensity="mdpi"
            android:screenSize="normal" />
        <screen
            android:screenDensity="hdpi"
            android:screenSize="normal" />
        <screen
            android:screenDensity="xhdpi"
            android:screenSize="normal" />
        <screen
            android:screenDensity="480"
            android:screenSize="normal" />
        <screen
            android:screenDensity="640"
            android:screenSize="normal" />
    </compatible-screens>

    <application
        android:name=".android.SmookerApplication"
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@drawable/smooker_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".android.FrontPageActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".android.SetupQuitSmokeActivity"
            android:label="@string/title_activity_setting_quit_smoke"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transperent.NoAnimation"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".android.SetupMoneyboxActivity"
            android:label="@string/title_activity_setting_moneybox"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transperent.NoAnimation"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".android.SmokeBreakActivity"
            android:label="@string/title_activity_smoke_break"
            android:launchMode="singleInstance" >
        </activity>

        <service
            android:name=".android.service.StickyNotificationService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <receiver
            android:name=".actors.ActorDevice"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".actors.ActorSystemAlarm"
            android:enabled="true"
            android:exported="true" >
        </receiver>
        <!--
        <receiver
            android:name=".android.widget.SmokeCounterWidget"
            android:label="Today smokes" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.monroe.team.android.box.event.SMOKE_COUNT_CHANGED" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.monroe.team.android.box.event.QUIT_SCHEDULE_UPDATED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/smoke_counter_widget_info" />
        </receiver>
        -->
        <receiver
            android:name=".actors.ActorNotification"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <activity
            android:name=".android.DateDetailsActivity"
            android:label="@string/title_activity_date_details"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transperent.NoAnimation" >
        </activity>

        <activity
            android:name=".android.PreferencesActivity"
            android:launchMode="singleInstance"
            android:label="Preferences"
            android:theme="@style/AppTheme" >
        </activity>

    </application>

</manifest>
